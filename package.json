{
  "name": "esday",
  "type": "module",
  "version": "0.5.0",
  "packageManager": "pnpm@10.30.2",
  "description": "A simple date library fully written in TypeScript",
  "license": "MIT",
  "homepage": "https://github.com/BePo65/esday",
  "repository": {
    "type": "git",
    "url": "https://github.com/BePo65/esday"
  },
  "bugs": {
    "url": "https://github.com/BePo65/esday/issues"
  },
  "author": "BePo65 (https://github.com/BePo65)",
  "contributors": [
    "g-mero (https://github.com/g-mero)",
    "Olexandr88 <radole1203@gmail.com> (https://github.com/Olexandr88)"
  ],
  "keywords": [
    "dayjs",
    "date",
    "time",
    "immutable",
    "moment",
    "parse",
    "format",
    "validate",
    "i18n",
    "l10n"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./plugins/*": {
      "types": "./plugins/*/index.d.ts",
      "default": "./plugins/*/index.js"
    },
    "./locales/*": {
      "types": "./locales/*.d.ts",
      "default": "./locales/*.js"
    }
  },
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "typesVersions": {},
  "files": [
    "*"
  ],
  "scripts": {
    "lint": "pnpm exec biome check .",
    "lint:fix": "pnpm exec biome check --write .",
    "build": "tsdown",
    "build:ghpages": "node ./scripts/gh-pages/create-gh-pages.js",
    "type-check": "tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:ui": "vitest --ui --api 9527",
    "test:run": "vitest --run",
    "test:run:tz1": "TZ=Pacific/Auckland vitest --run",
    "test:run:tz2": "TZ=Asia/Kathmandu vitest --run",
    "test:run-browser": "vitest --run --browser.enabled --testTimeout=30000",
    "test:coverage": "vitest run --coverage",
    "release": "commit-and-tag-version -i CHANGELOG.md --same-file",
    "lint-commits": "commitlint --from b4c0a8614dd7d9997 --to HEAD --verbose",
    "copypkg": "cpy package.json dist/ && cpy README.md dist/ && cpy CHANGELOG.md dist/",
    "pub": "pnpm build && pnpm copypkg && cd dist && pnpm publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@playwright/test": "~1.58.2",
    "@types/node": "^25.3.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "commit-and-tag-version": "^12.6.1",
    "cpy-cli": "^7.0.0",
    "dompurify": "^3.3.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "marked": "^17.0.3",
    "moment": "^2.30.1",
    "playwright": "~1.58.2",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3",
    "vite": "^7.3.1",
    "vitest": "4.0.18"
  },
  "commit-and-tag-version": {
    "packageFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  }
}
